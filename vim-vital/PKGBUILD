# Maintainer: Levente Polyak <anthraxx[at]archlinux[dot]org>

pkgname=vim-vital
_gitcommit=982e0bf3a5c181c0fa9d37bab784412f941f6b80
pkgver=0.0.3113.982e0bf3
pkgrel=1
pkgdesc='Comprehensive Vim utility functions for Vim plugins'
url='https://github.com/vim-jp/vital.vim'
arch=('any')
license=('custom:NYSL')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
source=(${pkgname}::"git+https://github.com/vim-jp/vital.vim#commit=${_gitcommit}")
sha512sums=('SKIP')

pkgver() {
  cd ${pkgname}
  printf "%s.%s.%s" "0.0" \
    "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd ${pkgname}
  install -d "${pkgdir}/usr/share/vim/vimfiles"
  cp -dpr --no-preserve=ownership -t "${pkgdir}/usr/share/vim/vimfiles" \
    autoload doc plugin
  install -Dm 644 README.md Changes -t "${pkgdir}/usr/share/doc/${pkgdir}"
  install -Dm 644 README.md -T "${pkgdir}/usr/share/doc/${pkgdir}/LICENSE"
}

# vim: ts=2 sw=2 et:
